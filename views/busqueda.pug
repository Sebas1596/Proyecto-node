extends ./layout/app

block content
    div(class="py-5")
        h1(class="text-center text-3xl font-extrabold py-10")= title

        if propiedades.length
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-5")
                each propiedad in propiedades
                    include ./templates/card
        else
            p(class="text-center text-gray-600") No hay propiedades para mostrar