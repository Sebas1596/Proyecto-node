extends ../layout/index

block content
    .py-5
        h1.text-center.text-5xl.my-5.font-extrabold.text-blue-800(class="font-sans md:font-serif") Bienes
            span.font-normal Raíces
        h2.text-center.text-3xl.font-extrabold.text-blue-800(class="font-sans md:font-serif")= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.text-red-600.font-bold.uppercase.text-xs.text-center.p-1= error.msg

        .mt-8.mx-auto.max-w-lg.border-2
            .py-8.px-6.shadow-md.rounded-lg(class="bg-white")
                form(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    input(type="hidden" name="token" value= token)
                    div.mb-6
                        label.block.text-sm.uppercase.text-black.mb-1.font-bold(for="password") Nueva Contraseña
                        input#password.w-full.py-2.px-3.placeholder-gray-400.rounded-lg.border-2( placeholder="Enter your password" name="password" type="password" disabled=disabled class=" bg-input disabled:bg-gray-200")
                    div.mb-6
                        label.block.text-sm.uppercase.text-black.mb-1.font-bold(for="password_confirmation") Confirmar Contraseña
                        input#password_confirmation.w-full.py-2.px-3.placeholder-gray-400.rounded-lg.border-2(placeholder="Repite tu contraseña" name="password_confirmation" type="password" disabled=disabled class="bg-input disabled:bg-gray-200")
                    input(class="w-full bg-orange-500 hover:bg-indigo-800 text-black hover:text-white font-bold uppercase text-sm py-3 cursor-pointer transition-colors" type="submit" value="Cambiar Contraseña")
                    .flex.items-center.justify-between.mt-5
                        a.text-blue-800.text-xs(href="/auth/registro") ¿No tienes una cuenta todavía? Crear Cuenta
                        a.text-blue-800.text-xs(href="/auth/login") ¿Ya estás registrado? Iniciar Sesión