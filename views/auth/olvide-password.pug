extends ../layout/index

block content
    .py-5
        h1.text-center.text-5xl.my-5.font-extrabold.text-blue-800(class="font-sans md:font-serif") Bienes
            span.font-normal Raíces
        h2.text-center.text-3xl.font-extrabold.text-blue-800(class="font-sans md:font-serif")= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.text-red-600.font-bold.uppercase.text-xs.text-center.p-1= error.msg

        .mt-8.mx-auto.max-w-lg.border-2
            .py-8.px-6.shadow-md.rounded-lg(class="bg-white")
                form(method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.mb-6
                        label.block.text-sm.uppercase.text-neutral-950.mb-1.font-bold(for="email") Correo Electrónico
                        input#email.w-full.py-2.px-3.placeholder-gray-700.rounded-lg.border-2( placeholder="Ingresa tu Correo Electrónico" class="bg-input"  name="email" type="email" value= usuario ? usuario.email : '')
                    input(class="w-full bg-orange-500 hover:bg-indigo-800 transition-colors text-black hover:text-white font-bold uppercase text-sm py-3 cursor-pointer rounded-lg" type="submit" value="Enviar Instrucciones")
                    .flex.items-center.justify-between.mt-5
                        a.text-blue-800.text-xs(href="/auth/registro") ¿No tienes una cuenta todavía? Crea Una
                        a.text-blue-800.text-xs(href="/auth/login") ¿Ya estás registrado? Inicia Sesión